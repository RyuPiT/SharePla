<div class="container">
  <div class="page-header">
    <h1><%= @plan.title %></h1>
    <h2><%= @plan.description %></h2>
  </div>
  <% @plan.days.each do |arr| %>
      <li class="ui-state-default"><%= arr.title %></li>
  <% end %>

  <form action="<%= pdf_string_path %>" id="postUri" method="POST">
    <input type="hidden" name="uri" value="<%= request.url %>">
    <input type="hidden" name="id" value="<%= @plan.id %>">
    <input type="submit" value="PDF">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
